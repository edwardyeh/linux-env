#! /bin/bash -f

passportname="Hsin-Hsien Yeh"
author="Edward Yeh"
year=$(date +%Y)
times=$(date)
type=

if [ "$#" -lt 2 ]; then
    echo "Usage: touchh <format> <filename>"
    echo ""
    echo "  format:  c   -- C/C++"
    echo "           h   -- Header file"
    echo "           v   -- Verilog"
    echo "           f   -- Verilog file list"
    echo "           cs  -- C shell script"
    echo "           bs  -- Bash shell script"
    echo "           t   -- Verilog testbench"
    exit
fi

if [ "$1" == "c" -o "$1" == "h" ]; then
    echo '// +FHDR-----------------------------------------------------------------------'  >  $2 
    echo "// Copyright (c) 2013-$year $passportname ($author). All rights reserved."        >> $2
    echo "// Filename        : $2"                                                          >> $2
    echo '// Version         : $Revision: $'                                                >> $2
    echo '// Last Modified On: $Date: $'                                                    >> $2
    echo '// Last Modified By: $Author: $'                                                  >> $2
    echo '//                   '                                                            >> $2
    echo '// File Description: '                                                            >> $2
    echo '// ----------------------------------------------------------------------------'  >> $2 
    echo '// Reuse Issues    : '                                                            >> $2
    echo '// Parameters      : '                                                            >> $2
    echo '//                   '                                                            >> $2
    echo '// Abbreviations   : '                                                            >> $2
    echo '// Release History : '                                                            >> $2
    echo '// ----------------------------------------------------------------------------'  >> $2 
    echo "// Author          : $author"                                                     >> $2
    echo "// Created On      : $times"                                                      >> $2
    echo "// Format          : $type"                                                       >> $2
    echo '// ----------------------------------------------------------------------------'  >> $2 
    echo '// $Log: '$2',v $'                                                                >> $2
    echo '// -FHDR-----------------------------------------------------------------------'  >> $2 

elif [ "$1" == "v" ]; then
    module_name=$(echo $2 | sed 's/\.v//g')
    echo '// +FHDR-----------------------------------------------------------------------'  >  $2 
    echo "// Copyright (c) 2013-$year $passportname ($author). All rights reserved."        >> $2
    echo "// Filename        : $2"                                                          >> $2
    echo '// Version         : $Revision: $'                                                >> $2
    echo '// Last Modified On: $Date: $'                                                    >> $2
    echo '// Last Modified By: $Author: $'                                                  >> $2
    echo '//                   '                                                            >> $2
    echo '// File Description: '                                                            >> $2
    echo '// ----------------------------------------------------------------------------'  >> $2 
    echo '// Reuse Issues    : '                                                            >> $2
    echo '// Parameters      : '                                                            >> $2
    echo '// Reset Strategy  : '                                                            >> $2
    echo '// Clock Domain    : '                                                            >> $2
    echo '//                   '                                                            >> $2
    echo '// Abbreviations   : '                                                            >> $2
    echo '// Prefix          : c_<var> - current time'                                      >> $2
    echo '//                   n_<var> - next time'                                         >> $2
    echo '// Postfix         : <var>_n - negtive sensitive signal'                          >> $2
    echo '//                   <var>_r - flip-flop'                                         >> $2
    echo '//                   <var>_w - wire drive a flip-flop'                            >> $2
    echo '// Release History : '                                                            >> $2
    echo '// ----------------------------------------------------------------------------'  >> $2 
    echo "// Author          : $author"                                                     >> $2
    echo "// Created On      : $times"                                                      >> $2
    echo "// Format          : $type"                                                       >> $2
    echo '// ----------------------------------------------------------------------------'  >> $2 
    echo '// $Log: '$2',v $'                                                                >> $2
    echo '// -FHDR-----------------------------------------------------------------------'  >> $2 
    echo ''                                                                                 >> $2
    echo "module $module_name ();"                                                          >> $2
    echo ''                                                                                 >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo '//--- Parameter'                                                                  >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo ''                                                                                 >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo '//--- Input'                                                                      >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo ''                                                                                 >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo '//--- Output'                                                                     >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo ''                                                                                 >> $2
    echo '//ftc_ss_protect'                                                                 >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo '//--- Register'                                                                   >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo ''                                                                                 >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo '//--- Wire'                                                                       >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo ''                                                                                 >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo '//--- Circuit'                                                                    >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo ''                                                                                 >> $2
    echo '//ftc_ss_endprotect'                                                              >> $2
    echo ''                                                                                 >> $2
    echo 'endmodule'                                                                        >> $2

elif [ "$1" == "t" ]; then
    module_name=$(echo $2 | sed 's/\.v//g')
    echo '// +FHDR-----------------------------------------------------------------------'  >  $2 
    echo "// Copyright (c) 2013-$year $passportname ($author). All rights reserved."        >> $2
    echo "// Filename        : $2"                                                          >> $2
    echo '// Version         : $Revision: $'                                                >> $2
    echo '// Last Modified On: $Date: $'                                                    >> $2
    echo '// Last Modified By: $Author: $'                                                  >> $2
    echo '//                   '                                                            >> $2
    echo '// File Description: '                                                            >> $2
    echo '// ----------------------------------------------------------------------------'  >> $2 
    echo '// Reuse Issues    : '                                                            >> $2
    echo '// Parameters      : '                                                            >> $2
    echo '// Reset Strategy  : '                                                            >> $2
    echo '// Clock Domain    : '                                                            >> $2
    echo '//                   '                                                            >> $2
    echo '// Abbreviations   : '                                                            >> $2
    echo '// Prefix          : c_<var> - current time'                                      >> $2
    echo '//                   n_<var> - next time'                                         >> $2
    echo '// Postfix         : <var>_n - negtive sensitive signal'                          >> $2
    echo '//                   <var>_r - flip-flop'                                         >> $2
    echo '//                   <var>_w - wire drive a flip-flop'                            >> $2
    echo '// Release History : '                                                            >> $2
    echo '// ----------------------------------------------------------------------------'  >> $2 
    echo "// Author          : $author"                                                     >> $2
    echo "// Created On      : $times"                                                      >> $2
    echo "// Format          : $type"                                                       >> $2
    echo '// ----------------------------------------------------------------------------'  >> $2 
    echo '// $Log: '$2',v $'                                                                >> $2
    echo '// -FHDR-----------------------------------------------------------------------'  >> $2 
    echo ''                                                                                 >> $2
    echo "moudle $module_name;"                                                             >> $2
    echo ''                                                                                 >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo '//--- Parameter'                                                                  >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo ''                                                                                 >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo '//--- Signal'                                                                     >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo ''                                                                                 >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo '//--- Description'                                                                >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo ''                                                                                 >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo '//--- Task'                                                                       >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo ''                                                                                 >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo '//--- Circuit'                                                                    >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo ''                                                                                 >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo '//--- Monitor'                                                                    >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo ''                                                                                 >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo '//--- Waveform Dump'                                                              >> $2
    echo '//------------------------------------------------------------'                   >> $2
    echo ''                                                                                 >> $2
    echo 'endmodule'                                                                        >> $2

elif [ "$1" == "f" ]; then
    echo '// +FHDR-----------------------------------------------------------------------'  >  $2 
    echo "// Copyright (c) 2013-$year $passportname ($author). All rights reserved."        >> $2
    echo "// Filename        : $2"                                                          >> $2
    echo '// Version         : $Revision: $'                                                >> $2
    echo '// Last Modified On: $Date: $'                                                    >> $2
    echo '// Last Modified By: $Author: $'                                                  >> $2
    echo '//                   '                                                            >> $2
    echo '// File Description: '                                                            >> $2
    echo '// ----------------------------------------------------------------------------'  >> $2 
    echo '// Reuse Issues    : '                                                            >> $2
    echo '//                   '                                                            >> $2
    echo '// Abbreviations   : '                                                            >> $2
    echo '// Release History : '                                                            >> $2
    echo '// ----------------------------------------------------------------------------'  >> $2 
    echo "// Author          : $author"                                                     >> $2
    echo "// Created On      : $times"                                                      >> $2
    echo "// Format          : $type"                                                       >> $2
    echo '// ----------------------------------------------------------------------------'  >> $2 
    echo '// $Log: '$2',v $'                                                                >> $2
    echo '// -FHDR-----------------------------------------------------------------------'  >> $2 

elif [ "$1" == "bs" -o "$1" == "cs" ]; then
    if [ "$1" == "bs" ]; then
        echo '#! /bin/bash -f'
    else
        echo '#! /bin/csh -f'
    fi
    echo '// +FHDR-----------------------------------------------------------------------'  >  $2 
    echo "// Copyright (c) 2013-$year $passportname ($author). All rights reserved."        >> $2
    echo "// Filename        : $2"                                                          >> $2
    echo '// Version         : $Revision: $'                                                >> $2
    echo '// Last Modified On: $Date: $'                                                    >> $2
    echo '// Last Modified By: $Author: $'                                                  >> $2
    echo '//                   '                                                            >> $2
    echo '// File Description: '                                                            >> $2
    echo '// ----------------------------------------------------------------------------'  >> $2 
    echo '// Reuse Issues    : '                                                            >> $2
    echo '// Parameter       : '                                                            >> $2
    echo '//                   '                                                            >> $2
    echo '// Abbreviations   : '                                                            >> $2
    echo '// Release History : '                                                            >> $2
    echo '// ----------------------------------------------------------------------------'  >> $2 
    echo "// Author          : $author"                                                     >> $2
    echo "// Created On      : $times"                                                      >> $2
    echo "// Format          : $type"                                                       >> $2
    echo '// ----------------------------------------------------------------------------'  >> $2 
    echo '// $Log: '$2',v $'                                                                >> $2
    echo '// -FHDR-----------------------------------------------------------------------'  >> $2 
    chmod +x $2
fi

        
