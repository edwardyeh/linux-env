#! /bin/bash

# ------------------------------------------------------------
# --- Command Check
# ------------------------------------------------------------

function usage() {
    prog=$(basename $0)
    echo "Usage: $prog <license_type> <format> <filename> [force_replace]"
    header_gen -list

    echo "  license_type:  p  -- private license"
    echo "                 o  -- open-source license"
    echo "  force_replace: y  -- force replace    "
    echo "                 n  -- process terminate"
    echo ""
}

if [ "$#" -lt 3 -o "$#" -gt 4 ]; then
    usage $0
    exit 1
fi

license_type="$1"
format="$2"
filename="$3"

if [ "$license_type" == "p" ]; then
    license_gen="header_gen"
elif [ "$license_type" == "o" ]; then
    license_gen="header_gen_os"
else
    echo "Unknown license type, terminate."
    exit 1 
fi

$license_gen $format $filename -test

if [ "$?" -ne 0 ]; then 
    usage $0 
    exit 1 
fi

if [ -f "$filename" ]; then
    ans=

    if [ "$#" -eq 4 ]; then
        ans="$4"
    else
        read -p "File exist, replace? (y/n) " ans
    fi

    if [ "$ans" == "Y" -o "$ans" == "y" ]; then
        \rm -rf $filename
    else
        echo "Process terminate."
        exit 1
    fi
fi

# ------------------------------------------------------------
# --- Pre-Process
# ------------------------------------------------------------
if [ "$format" == "bs" ]; then
    echo '#!/bin/bash' > $filename
    $license_gen $format $filename >> $filename
    echo '' >> $filename
    echo 'alias acalc='"'"'function func { awk "BEGIN{ print $* }"; }; func'"'" >> $filename
    echo '' >> $filename
    chmod +x $filename
elif [ "$format" == "cs" ]; then
    echo '#!/bin/csh' > $filename
    $license_gen $format $filename >> $filename
    echo '' >> $filename
    echo 'alias acalc '"'"'awk "BEGIN{ print \!* }"'"'" >> $filename
    echo 'alias "bash -c '"'"'echo "'"'"'$RANDOM'"'"'"'"'"'"' >> $filename
    echo '' >> $filename
    chmod +x $filename
elif [ "$format" == "py" ]; then
    echo '#!/usr/bin/env python3'   > $filename
    echo '# -*- coding: utf-8 -*-' >> $filename
    $license_gen $format $filename >> $filename
    echo '' >> $filename
    chmod +x $filename
else
    $license_gen $format $filename >> $filename
    echo '' >> $filename
fi

# ------------------------------------------------------------
# --- Post-Process
# ------------------------------------------------------------

if [ "$format" == "v" ]; then
    org=""
    module_name=$(echo $filename | sed 's/\.v//g')

    echo "module $module_name ();"                                        >> $filename
    echo ''                                                               >> $filename
    echo '//============================================================' >> $filename
    echo '//--- Parameter'                                                >> $filename
    echo '//============================================================' >> $filename
    echo '//{{{'                                                          >> $filename
    echo '//}}}'                                                          >> $filename
    echo ''                                                               >> $filename
    echo '//============================================================' >> $filename
    echo '//--- Input'                                                    >> $filename
    echo '//============================================================' >> $filename
    echo '//{{{'                                                          >> $filename
    echo '//}}}'                                                          >> $filename
    echo ''                                                               >> $filename
    echo '//============================================================' >> $filename
    echo '//--- Output'                                                   >> $filename
    echo '//============================================================' >> $filename
    echo '//{{{'                                                          >> $filename
    echo '//}}}'                                                          >> $filename
    echo ''                                                               >> $filename
    echo "//${org}ss_protect"                                             >> $filename
    echo '//============================================================' >> $filename
    echo '//--- Register'                                                 >> $filename
    echo '//============================================================' >> $filename
    echo '//{{{'                                                          >> $filename
    echo '//}}}'                                                          >> $filename
    echo ''                                                               >> $filename
    echo '//============================================================' >> $filename
    echo '//--- Wire'                                                     >> $filename
    echo '//============================================================' >> $filename
    echo '//{{{'                                                          >> $filename
    echo '//}}}'                                                          >> $filename
    echo ''                                                               >> $filename
    echo '//============================================================' >> $filename
    echo '//--- Circuit'                                                  >> $filename
    echo '//============================================================' >> $filename
    echo '//{{{'                                                          >> $filename
    echo '//}}}'                                                          >> $filename
    echo ''                                                               >> $filename
    echo "//${org}ss_endprotect"                                          >> $filename
    echo ''                                                               >> $filename
    echo 'endmodule'                                                      >> $filename

elif [ "$format" == "t" ]; then
    module_name=$(echo $filename | sed 's/\.v//g')

    echo "moudle $module_name;"                                           >> $filename
    echo ''                                                               >> $filename
    echo '//============================================================' >> $filename
    echo '//--- Parameter'                                                >> $filename
    echo '//============================================================' >> $filename
    echo '//{{{'                                                          >> $filename
    echo '//}}}'                                                          >> $filename
    echo ''                                                               >> $filename
    echo '//============================================================' >> $filename
    echo '//--- Signal'                                                   >> $filename
    echo '//============================================================' >> $filename
    echo '//{{{'                                                          >> $filename
    echo '//}}}'                                                          >> $filename
    echo ''                                                               >> $filename
    echo '//============================================================' >> $filename
    echo '//--- Description'                                              >> $filename
    echo '//============================================================' >> $filename
    echo ''                                                               >> $filename
    echo '//============================================================' >> $filename
    echo '//--- Task'                                                     >> $filename
    echo '//============================================================' >> $filename
    echo ''                                                               >> $filename
    echo '//============================================================' >> $filename
    echo '//--- Circuit'                                                  >> $filename
    echo '//============================================================' >> $filename
    echo ''                                                               >> $filename
    echo '//============================================================' >> $filename
    echo '//--- Monitor'                                                  >> $filename
    echo '//============================================================' >> $filename
    echo ''                                                               >> $filename
    echo '//============================================================' >> $filename
    echo '//--- Waveform Dump'                                            >> $filename
    echo '//============================================================' >> $filename
    echo ''                                                               >> $filename
    echo 'endmodule'                                                      >> $filename

elif [ "$format" == "f" ]; then
    echo '//============================================================' >> $filename
    echo '//--- Include Path'                                             >> $filename
    echo '//============================================================' >> $filename
    echo ''                                                               >> $filename
    echo '//============================================================' >> $filename
    echo '//--- Define'                                                   >> $filename
    echo '//============================================================' >> $filename
    echo ''                                                               >> $filename
    echo '//============================================================' >> $filename
    echo '//--- Library'                                                  >> $filename
    echo '//============================================================' >> $filename
    echo ''                                                               >> $filename
    echo '//============================================================' >> $filename
    echo '//--- DesignWare'                                               >> $filename
    echo '//============================================================' >> $filename
    echo ''                                                               >> $filename
    echo '//============================================================' >> $filename
    echo '//--- Testbench'                                                >> $filename
    echo '//============================================================' >> $filename
    echo ''                                                               >> $filename
    echo '//============================================================' >> $filename
    echo '//--- Monitor'                                                  >> $filename
    echo '//============================================================' >> $filename
    echo ''                                                               >> $filename
    echo '//============================================================' >> $filename
    echo '//--- Design'                                                   >> $filename
    echo '//============================================================' >> $filename
    echo ''                                                               >> $filename

fi
        
